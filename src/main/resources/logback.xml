	<appender name="applicationLogError"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${APP_LOG_ROOT}/serveErrorLogs.log</file>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${APP_LOG_ROOT}/serveErrorLogs-%i.log
			</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>100</maxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>10MB</maxFileSize>
		</triggeringPolicy>
	</appender>

	<logger name="com.iemr.mmu.controller.fetosense" level="TRACE">
		<appender-ref ref="fetosenseLog" />
	</logger>

	<logger name="com.iemr.mmu" level="TRACE">
<!-- 		<appender-ref ref="applicationLogInfo" /> -->
		<appender-ref ref="applicationLogError" />
	</logger>


	<root level="INFO">
		<appender-ref ref="console" />
		<appender-ref ref="applicationLogs" />
	</root>

</configuration>